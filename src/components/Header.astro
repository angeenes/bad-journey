---
import { SITE_TITLE } from '../consts';
import AddPicture from '@components/AddPicture.astro';
import Login from '@components/Login.astro';
---

<header class="header bg-primary">
  <a href="/" class="flex gap-4 justify-center items-center">
	<img src="/img/logo.webp" alt="logo Bad Journey" width="42" height="42">
	<span class="uppercase font-black">	{SITE_TITLE}</span>
</a>
  <section class="center"></section>
  <section class="flex">
	<Login />
	<AddPicture />
  </section>
</header>


<style lang="scss">
	.header {
		position: fixed;
		top: 0;
		display: flex;
		z-index: 1;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		height: 80px;
		color: white;
		section, a {
			margin: 0 2rem;
		}
		.center {
			border-right: 1px solid white;
			padding-right: 1rem;
			margin-left: auto;
		}
	}
</style>
