	}
}
.loader-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
	&::before {
		content: '';
		box-sizing: border-box;
		position: absolute;
		height: 5px;
    padding: 0 2rem;
		background-color: #9ca3af;;
		animation: loader-bar-anim 0.8s cubic-bezier(0, 0, 0.03, 0.9) infinite;
	}
	&::after {
		content: '';
		box-sizing: border-box;
		position: absolute;
	}
}

