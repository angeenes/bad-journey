---
import HeaderLink from './HeaderLink.astro';
---
<section class="hero">
  <nav class="categories container">
  	<HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/category/horror">horror</HeaderLink>
    <HeaderLink href="/category/humor">humor</HeaderLink>
    <HeaderLink href="/category/failed">failed</HeaderLink>
    <HeaderLink href="/category/amazing">amazing</HeaderLink>
    <HeaderLink href="/category/subversif">subversif</HeaderLink>
    <HeaderLink href="/category/fake">fake</HeaderLink>
  </nav>
  <h1 class="hero-catch">Welcome to  <div>THE JUNGLE</div>  </h1>
  <input type="search" name="search image" placeholder="Search the worst of millions of art images by AI models like DALL-E, Stable Diffusion, Midjourney..." id="search-input" class="search-input">
</section>

<style lang='scss'>
.hero {
  text-align: center;
  height: 639px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.3);
  .hero-catch {
    font-size: 1.25rem;
    text-align: left;
    text-shadow: 0px 0px 20px rgba(23, 35, 40, 0.2);
    font-weight: 900;
    color: white;
    div {
      margin-top: -1rem;
      font-size: 125px;
    }
  }
  .categories {
    position: absolute;
    width: 100%;
    top: 130px;
    display: flex;
    justify-content: center;
    align-items: center;
    .category-item {
      margin: 0 1rem;
      text-transform: capitalize;
      padding: 1rem;
      border-radius: .5rem;
      cursor: pointer;
      &.active, &:hover {
        background: var(--color-primary);
        color: white;
      }
    }
  }
  .search-input {
    background: #FFFFFF;
    box-shadow: 0px 0px 10px rgba(23, 35, 40, 0.15);
    border-radius: 40px;
    padding: 16px 24px;
    width: 824px;
    height: 56px;
    outline: none;
    border: none;
  }
}
</style>